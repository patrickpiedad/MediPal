@page "/"
@using MediPal.Components
@rendermode InteractiveServer

@inject ISymptomService SymptomService


<div class="container-fluid">

    @* start row 1 *@
    <div class="row">

        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style="text-align: center;">
                    @* need to detach this into a separate component and link to it here *@
                    <h5 class="card-title">Patient Information</h5>
                    <p class="card-text">Name: Jane Doe</p>
                    <p class="card-text">Date of Birth: 31.12.1994</p>
                    <p class="card-text">Medical Diagnosis: Leukemia</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style=" text-align: center;">
                    @* need to detach this into a separate component and link to it here *@
                    <h5 class="card-title">Treatment Timeline</h5>
                    <p class="card-text">Insert timeline here.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style=" text-align: center;">
                    @* need to detach this into a separate component and link to it here *@
                    <h5 class="card-title">My Profile</h5>
                    <p class="card-text">Insert profile picture and link to profile here.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>

    @* start row 2 *@
    <div class="row">
        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style=" text-align: center;">
                    <table class="table">

                        @if (symptoms == null)
                        {
                            <span>Symptom list not found.</span>
                        }

                        @if (symptoms.Count == 0)
                        {
                            <div>
                                <span>Loading symptoms...</span>
                            </div>
                        }
                        else
                        {
                            <thead>
                                <tr>
                                    <th>Symptom Name</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                        }
                        <tbody>
                            @foreach (var symptom in symptoms)
                            {
                                <tr>
                                    <td>@symptom.SymptomName</td>
                                    <td>@symptom.Date</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style=" text-align: center;">
                    @* need to detach this into a separate component and link to it here *@
                    <h5 class="card-title">Week Outlook</h5>
                    <p class="card-text">Insert calendar of events for the week here.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border">
                <div class="card-body" style=" text-align: center;">
                    @* need to detach this into a separate component and link to it here *@
                    <h5 class="card-title">Your Medical Team</h5>
                    <p class="card-text">Insert list of medical people here.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>

</div>

@code {
    List<Symptom> symptoms = new List<Symptom>();

    protected override async Task OnInitializedAsync()
    {
        symptoms = await SymptomService.GetAllSymptomsAsync();
    }
}
