@page "/symptomlist"
@inject ISymptomService SymptomService
@attribute [StreamRendering]

<h3>Symptom List</h3>

@if (symptoms == null)
{
    <span>Loading...</span>
}

else if (symptoms.Count == 0)
{
    <span>No symptoms found.</span>
    <AddSymptomButton />

}

else
{
    <MudNavLink Href="/addsymptom" Match="NavLinkMatch.Prefix">Add Symptom</MudNavLink>

    <MudDataGrid T="Symptom" Items="@symptoms" ReadOnly="true" Bordered="true" Dense="true">

        <Columns>

            <PropertyColumn Property="Symptom => Symptom.SymptomID" Title="Symptom ID" />
            <PropertyColumn Property="Symptom => Symptom.SymptomName" Title="Symptom Name" />
            <PropertyColumn Property="Symptom => Symptom.Date" />
            <PropertyColumn Property="Symptom => Symptom.PainLevel" Title="Pain Level" />
            <PropertyColumn Property="Symptom => Symptom.Activity" />

            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" />
                </CellTemplate>
            </TemplateColumn>

        </Columns>

    </MudDataGrid>
}

